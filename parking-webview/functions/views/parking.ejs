<!-- views/parking.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link href="parking.css" rel="stylesheet" type="text/css" /> -->
    <title>Parking Card</title>
    <style>
        :root {
            --PI: 3.1415926535;
            --r: 10vw;
        }

        h1 {
            text-align: center;
        }

        .row {
            width: 100%;
        }

        .column {
            border-color: black;
            float: left;
            width: calc(100% / <%=numSpotsSelected %>);
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .progress {
            display: block;
            margin: 0 auto;
            overflow: hidden;
            transform: rotate(-90deg) rotateX(180deg);
            width: 20vw;
            height: 20vw;
        }

        .progress circle {
            fill: transparent;
            stroke-dashoffset: 0;
            /* Circumference in dash-array*/
            stroke-dasharray: calc(2 * var(--PI) * var(--r));
            /* transition: stroke-dashoffset 1s ease; */
            stroke-width: 1vw;
            r: var(--r);
            cx: var(--r);
            cy: var(--r);

        }

        .progress .bar {
            /* r: var(--r);
            cx: var(--r);
            cy: var(--r); */
        }

        .progressdiv {
            position: relative;
        }


    </style>
    <script>
        (function () {
            window.onload = function () {
                var totalProgress, progress;
                const circles = document.querySelectorAll('.progress');
                for (var i = 0; i < circles.length; i++) {
                    totalProgress = circles[i].querySelector('circle').getAttribute('stroke-dasharray'); //Gets circumference
                    console.log(circles[i].querySelector('circle').style['stroke-dasharray']);
                    progress = circles[i].parentElement.getAttribute('data-percent');
                    if (progress == 'NA') {
                        //If NA means no spots of this type
                        circles[i].querySelector('.bar').style['stroke-dashoffset'] = 0;
                    } else {
                        circles[i].querySelector('.bar').style['stroke-dashoffset'] = totalProgress * progress / 100;
                    }
                }
            }
        })();
    </script>
</head>

<body>
    <div id="parking_card">


        <% if(typeof(lotName) != "undefined") {%>
        <h1 class="lot_name"><%= lotName %></h1>
        <center>
            <p style="opacity: 0.5;"><%= lotContext %></p>
        </center>
        <center>
            <b>
                <p id="total_spots">~<%= totalSpaces %> Spots Available</p>
            </b>
        </center>
        <% if(isHistoric) {%>
        <center>
            <b>âš  No Live Data. Estimated availability shown. </b>
        </center>
        <% } else { %>
        <center><b>&nbsp;</b></center>
        <% } %>

        <% if(typeof(userSpotData) != "undefined") {%>
        <div class="row">
            <% Object.keys(userSpotData).forEach(key => { %>
            <% console.log(key) %>
            <% console.log(userSpotData[key]) %>
            <%- include('partials/parkingComponent', {spotData: userSpotData[key], spotId: key}) %>
            <% }); %>
        </div>
        <%} else {%>
        <center>No Spot Types Provided</center>
        <%}%>
    <%}%>
    </div>
</body>

</html>